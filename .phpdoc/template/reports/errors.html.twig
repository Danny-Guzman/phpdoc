{% set report = 'error' %}
{% set reports = [] %}

{% for file in project.files %}
{% if file.getAllErrors() is not empty %}

{% set reports = reports|merge([
    { 
        'filename' : file.getName(),
        'filepath' : file.getPath(),
        'report' : file.getAllErrors()
    }
]) %}

{% endif %}
{% endfor %} 

